{
  "name": "niod-core",
  "version": "0.1.0-beta.3",
  "description": "NIOD is a JS API for DCS World, NIOD-core is the core lib of the NIOD ecosystem. It uses a socket to communicate with a LUA library",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "build": "tsc --declaration",
    "test:mission": "ts-node test_mission.ts",
    "format:check": "prettier src/**/*.ts --list-different",
    "format:fix": "prettier src/**/*.ts --write",
    "docs:generate": "typedoc --plugin typedoc-plugin-markdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ked57/NIOD-core.git"
  },
  "keywords": [
    "NIOD",
    "DCS World",
    "DCS",
    "API"
  ],
  "author": "Ked",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Ked57/NIOD-core/issues"
  },
  "homepage": "https://github.com/Ked57/NIOD-core#readme",
  "dependencies": {
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/uuid": "^3.4.4",
    "prettier": "^1.19.1",
    "ts-node": "^7.0.1",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "^3.9.6"
  }
}
